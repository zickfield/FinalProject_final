<div class="page-header">
  <h1>
    List of items
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Items (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @lists.each do |list| %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-list">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Item #<%= list.id %></h3>
      </div>
      <div class="panel-body">
        <dl>
          <dt>Owner</dt>
		  <dd><%= list.user.username %></dd>
		  <dt>Name</dt>
		  <dd><%= list.name %></dd>
		  <dt>Description</dt>
		  <dd><%= list.description %></dd>
		  <dt>price</dt>
		  <dd><%= list.price %></dd>
		  <dt>Image</dt>
		  <dd><img src="<%= list.image_url %>" style="width:200px"></dd>

        </dl>
        <div class="btn-group btn-group-justified">
         

          <a href="/lists/<%= list.id %>/book" class="btn btn-warning">
            <i class="fa fa-flag"></i>
            BOOK IT 
          </a>

        
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<!-- You can ignore the following. It's a quick and dirty example of how to get a Pinterest-style layout with quick search. -->
<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        listSelector: '.isotope-list',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
